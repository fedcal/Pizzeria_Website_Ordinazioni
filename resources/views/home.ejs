

        <section class="hero py-16">
            <div class="container mx-auto flex items-center justify-between">
                <div class="w-1/2">
                    <h6 class="text-lg"><em>Hai voglia di pizza?</em></h6>
                    <h1 class="text-4xl font-bold">Ordina subito da noi!!</h1>
                    <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">Ordina</button>
                </div>
                <div class="w-1/2">
                    <img src="/img/pizza_home.jpg" alt="">

                </div>
            </div>
        </section>

        <section class="menu container mx-auto py-8" id="menu">
            <h1 class="text-xl font-bold mb-8">Pizze</h1>
            <div class="grid grid-cols-4 col-gap-12 row-gap-16">
                <% pizzas.forEach(function(pizzas){%>
                    <div class="w-64"> 
                        <img clas="h-40 mb-4 mx-auto" src="/img/<%= pizzas.image %>" alt="" >
                        <div class="text-center ">
                            <h2 class="mb-4 text-lg"><%= pizzas.name %></h2>
                            <span class="py-1 px-4 uppercase text-xs size rounded-full"><%= pizzas.ingredienti %></span>
                            <div class="flex items-center justify-around mt-6"> 
                                <span class="font-bold text-lg"><%= (pizzas.price).toFixed(2) %> â‚¬</span>
                                <button data-pizza="<%= JSON.stringify(pizzas)%>"class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                                    <span>+</span>
                                    <span class="ml-4">Aggiungi</span>
                                </button>
                            </div>
                        </div>
                    </div>
                <%}) %>
                
                

            </div>
        </section>
